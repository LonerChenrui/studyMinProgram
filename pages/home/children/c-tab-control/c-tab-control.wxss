/* pages/home/children/c-tab-control/c-tab-control.wxss */
.tabControl {
  display: flex;
  background: #fff;
}
.tabControlItem {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.tabControlItem text{
  border-bottom: 4rpx solid #000;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.tabControlItem .active {
  color: red;
  border-bottom-color:red;
}