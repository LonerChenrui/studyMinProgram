/* components/c-goods/c-goods.wxss */
.title { 
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  font-size: 28rpx;
  padding: 10rpx 0;
} 
.item-bottom image {
  width: 40rpx;
  height: 40rpx;
  margin: 0 10rpx;
}
.price,.cfav {
  font-size: 28rpx;
} 
.price {
  color: red;
}
.goods {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.goods-image {
  width: 100%;
}
.goods .goods-item {
  width: 49%;
  padding: 10rpx;
  border-radius: 6rpx;
  box-sizing: border-box;
}
.goods .goods-item .item-bottom {
  display: flex;
  justify-content: center;
}